<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	
	<ui:with field='res' type='com.sitecake.contentmanager.client.resources.EditorClientBundle'/>
	
	<ui:style>
		.container {
			position: relative;
			float: left;
			width: 170px;
			height: 201px;
			padding: 12px;
			outline-width: 1px;
			outline-style: solid;
			outline-color: #DBDAD6;
		}
		
		.imageContainer {
			display: table-cell;
			width: 170px;
			height: 170px;
			text-align: center;
			vertical-align: bottom;
		}
		
		.imageContainer > img {
			margin: 0;
			padding: 0;
			border: none;
		}
		
		.description {
			color:#000000;
			font-size: 10px;
			line-height: 14px;
			font-family: Verdana,Geneva,sans-serif;
			margin-top: 11px;
		}
	</ui:style>
	
	<div class="{style.container}">
		<div class="{style.imageContainer}">
			<img ui:field="imageElement"></img>
		</div>
		<p class="{style.description}">description sdlfjsdl slfjsd flsdjfsd </p>
	</div>
</ui:UiBinder>