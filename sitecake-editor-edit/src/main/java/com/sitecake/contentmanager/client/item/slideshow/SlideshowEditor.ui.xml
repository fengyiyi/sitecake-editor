<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.sitecake.contentmanager.client.item.slideshow">
	
	<ui:style>
		.container {
			position: absolute;
			top: 0;
			left: 0;
			background-color: #cccccc;
			padding-bottom: 80px;	
		}
		
		.closeButton {
			position: absolute;
			right: 10px;
			top: 10px;
			width: 60px;
			height: 20px;
			background-color: #0094FF;
		}
		
		.boundry {
			position: absolute;
			top: 0;
			left: 0;
			bottom: 0;
			right: 0;
		}
		
		.imageContainer {
			float: left;
			position: relative;
			top: 40px;
			left: 0;
			width: 100%;
		}
		
	</ui:style>
	
	<g:HTMLPanel styleName="{style.container}">
		
		<g:AbsolutePanel styleName="{style.boundry}" ui:field="boundryPanel"></g:AbsolutePanel>

		<g:HTML styleName="{style.closeButton}" ui:field="closeButton">Close</g:HTML>
		
		<c:SlideshowImagePanel styleName="{style.imageContainer}" ui:field="imageContainer">
			
		</c:SlideshowImagePanel>

		<div style="clear:both;"></div>
	</g:HTMLPanel>
	
</ui:UiBinder> 