<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:style>
		.overlay {
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			cursor: pointer;
			z-index: 2000000000;
		}
		
		.fill {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			opacity: 0.7;
			filter: literal("alpha(opacity=70)");
			background-color: #000000;
		}
		
		.firstRow {
			position: absolute;
			top: 100px;
			left: 40px;
			color: #ffffff;
			font-family: Verdana;
			font-size: 30px;
			font-weight: bold;
		}
		
		.secondRow {
			position: absolute;
			top: 130px;
			left: 40px;
			color: #ffffff;
			font-family: Verdana;
			font-size: 15px;
		}
		
		.errorDump {
			position: absolute;
			top: 200px;
			left: 40px;
			color: #000000;
			opacity: 0.7;
			filter: literal("alpha(opacity=70)");
			font-family: Verdana;
			font-size: 12px;
		}
		
	</ui:style>
	<div class="{style.overlay}">
		<div class="{style.fill}"/>
		<div class="{style.firstRow}" ui:field="firstRow"/>
		<div class="{style.secondRow}" ui:field="secondRow"/>
		<div class="{style.errorDump}" ui:field="errorDump"/>
	</div>
</ui:UiBinder>